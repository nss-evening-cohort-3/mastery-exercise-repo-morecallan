
@{
    ViewBag.Title = "All Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Classroom.Count == 0)
{
    <h2>No Students Found!</h2>
}
else
{
    <h2>Here are your students</h2>
        <h3>@ViewBag.Classroom.Count Total Students</h3>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Major</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in ViewBag.Classroom)
                {
                   
                        <tr>
                            <td>@Html.ActionLink("View Details", "Details", "Student", new { id = @student.StudentId }, null)</td>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Major</td>
                        </tr>                    
                }
            </tbody>
        </table>
}
